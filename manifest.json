{
    "manifest_version": 3,
    "name": "FB Marketplace Helper",
    "version": "1.0",
  
    "host_permissions": [
      "https://www.facebook.com/*",
      "https://www.messenger.com/*"
    ],
  
    "content_scripts": [
      {
        "matches": [
          "https://www.facebook.com/*",
          "https://www.messenger.com/*"
        ],
        "js": ["content.js"],
        "all_frames": true
      }
    ]
  }
  